# ==============================================
# AI FILM STUDIO - PRODUCTION ENVIRONMENT
# ==============================================
# DO NOT COMMIT THIS FILE WITH REAL CREDENTIALS
# ALL SECRETS MUST BE IN AWS SECRETS MANAGER
# ==============================================

# Environment
NODE_ENV=production
APP_ENV=prod

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_BASE_URL=https://api.aifilmstudio.com

# Database (RDS Multi-AZ with Read Replicas)
DATABASE_URL=postgresql://user:password@prod-rds.xxx.us-east-1.rds.amazonaws.com:5432/ai_film_studio_prod
DATABASE_HOST=prod-rds.xxx.us-east-1.rds.amazonaws.com
DATABASE_PORT=5432
DATABASE_NAME=ai_film_studio_prod
DATABASE_USER=admin
DATABASE_PASSWORD=STORE_IN_SECRETS_MANAGER
DATABASE_SSL=true
DATABASE_POOL_SIZE=50
DATABASE_READ_REPLICA_URL=STORE_IN_SECRETS_MANAGER

# Redis (ElastiCache Cluster Mode)
REDIS_URL=redis://prod-redis.xxx.cache.amazonaws.com:6379
REDIS_HOST=prod-redis.xxx.cache.amazonaws.com
REDIS_PORT=6379
REDIS_PASSWORD=STORE_IN_SECRETS_MANAGER
REDIS_TLS=true
REDIS_CLUSTER_MODE=true

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=USE_IAM_ROLE
AWS_SECRET_ACCESS_KEY=USE_IAM_ROLE
S3_BUCKET_NAME=ai-film-studio-prod-media
S3_BUCKET_BACKUP=ai-film-studio-prod-media-backup
SQS_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/ACCOUNT_ID/ai-film-studio-prod-jobs
SQS_DLQ_URL=https://sqs.us-east-1.amazonaws.com/ACCOUNT_ID/ai-film-studio-prod-dlq

# Salesforce (Production Org)
SALESFORCE_CLIENT_ID=STORE_IN_SECRETS_MANAGER
SALESFORCE_CLIENT_SECRET=STORE_IN_SECRETS_MANAGER
SALESFORCE_USERNAME=prod.user@example.com
SALESFORCE_PASSWORD=STORE_IN_SECRETS_MANAGER
SALESFORCE_SECURITY_TOKEN=STORE_IN_SECRETS_MANAGER
SALESFORCE_INSTANCE_URL=https://login.salesforce.com

# YouTube Data API v3
YOUTUBE_API_KEY=STORE_IN_SECRETS_MANAGER
YOUTUBE_CLIENT_ID=xxx.apps.googleusercontent.com
YOUTUBE_CLIENT_SECRET=STORE_IN_SECRETS_MANAGER
YOUTUBE_REDIRECT_URI=https://www.aifilmstudio.com/api/auth/youtube/callback

# JWT Authentication
JWT_SECRET=STORE_IN_SECRETS_MANAGER
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=STORE_IN_SECRETS_MANAGER
JWT_REFRESH_EXPIRES_IN=30d

# AI Services
ELEVENLABS_API_KEY=STORE_IN_SECRETS_MANAGER
RUNWAY_API_KEY=STORE_IN_SECRETS_MANAGER
DREAM_MACHINE_API_KEY=STORE_IN_SECRETS_MANAGER

# Feature Flags
ENABLE_PODCAST_MODE=true
ENABLE_SLOKAS_MODE=true
ENABLE_MULTI_LANGUAGE=true
ENABLE_INDIAN_MUSIC=true
ENABLE_WESTERN_MUSIC=true

# AI Model Configuration
MODEL_CACHE_DIR=/app/models
GPU_DEVICE_ID=0
STABLE_DIFFUSION_MODEL=stabilityai/stable-diffusion-xl-base-1.0
USE_GPU=true

# Media Storage
TEMP_MEDIA_PATH=/tmp/media
UPLOAD_MAX_SIZE=100MB

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Monitoring & Observability
SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1
CLOUDWATCH_LOG_GROUP=/ai-film-studio/prod
ENABLE_XRAY_TRACING=true

# CORS
CORS_ORIGINS=https://www.aifilmstudio.com,https://aifilmstudio.com

# Rate Limiting
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX_REQUESTS=1000

# CloudFront
CLOUDFRONT_DISTRIBUTION_ID=PROD_DISTRIBUTION_ID
CLOUDFRONT_DOMAIN=cdn.aifilmstudio.com

# Security
ENABLE_RATE_LIMITING=true
ENABLE_CSRF_PROTECTION=true
SECURE_COOKIES=true
SESSION_SECRET=STORE_IN_SECRETS_MANAGER

# Performance
ENABLE_CACHING=true
CACHE_TTL=3600

# Backup & DR
ENABLE_AUTOMATED_BACKUP=true
BACKUP_RETENTION_DAYS=30
