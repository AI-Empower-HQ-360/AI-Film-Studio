# API Settings
API_V1_STR=/api/v1
PROJECT_NAME=AI Film Studio
VERSION=1.0.0

# Security
SECRET_KEY=your-super-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/aifilmstudio

# Redis
REDIS_URL=redis://localhost:6379/0

# AWS S3
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=ai-film-studio-outputs
S3_SIGNED_URL_EXPIRATION=3600

# Cost Governance
MAX_COST_PER_JOB=100.0
MAX_COST_PER_USER_DAILY=500.0

# Job Settings
MAX_RETRIES=3
JOB_TIMEOUT_SECONDS=3600

# Moderation
ENABLE_CONTENT_MODERATION=true
MODERATION_THRESHOLD=0.8

# CORS
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]
