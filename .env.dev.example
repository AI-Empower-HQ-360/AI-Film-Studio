# ==============================================
# AI FILM STUDIO - DEVELOPMENT ENVIRONMENT
# ==============================================
# DO NOT COMMIT THIS FILE WITH REAL CREDENTIALS
# Copy to .env and fill in actual values
# ==============================================

# Environment
NODE_ENV=development
APP_ENV=dev

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_BASE_URL=http://localhost:8000

# Database (RDS or Local)
DATABASE_URL=postgresql://user:password@localhost:5432/ai_film_studio_dev
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=ai_film_studio_dev
DATABASE_USER=postgres
DATABASE_PASSWORD=changeme

# Redis (ElastiCache or Local)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY
AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_KEY
S3_BUCKET_NAME=ai-film-studio-dev-media
SQS_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/ACCOUNT_ID/ai-film-studio-dev-jobs

# Salesforce (Dev Org)
SALESFORCE_CLIENT_ID=YOUR_SALESFORCE_CLIENT_ID
SALESFORCE_CLIENT_SECRET=YOUR_SALESFORCE_CLIENT_SECRET
SALESFORCE_USERNAME=your.email@example.com
SALESFORCE_PASSWORD=your_password
SALESFORCE_SECURITY_TOKEN=your_security_token
SALESFORCE_INSTANCE_URL=https://login.salesforce.com

# YouTube Data API v3
YOUTUBE_API_KEY=YOUR_YOUTUBE_API_KEY
YOUTUBE_CLIENT_ID=YOUR_YOUTUBE_CLIENT_ID.apps.googleusercontent.com
YOUTUBE_CLIENT_SECRET=YOUR_YOUTUBE_CLIENT_SECRET
YOUTUBE_REDIRECT_URI=http://localhost:3000/api/auth/youtube/callback

# JWT Authentication
JWT_SECRET=your-dev-jwt-secret-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-dev-jwt-refresh-secret
JWT_REFRESH_EXPIRES_IN=30d

# AI Services (Optional for Dev)
ELEVENLABS_API_KEY=YOUR_ELEVENLABS_API_KEY
RUNWAY_API_KEY=YOUR_RUNWAY_API_KEY
DREAM_MACHINE_API_KEY=YOUR_DREAM_MACHINE_API_KEY

# Feature Flags
ENABLE_PODCAST_MODE=true
ENABLE_SLOKAS_MODE=true
ENABLE_MULTI_LANGUAGE=true
ENABLE_INDIAN_MUSIC=true
ENABLE_WESTERN_MUSIC=true

# AI Model Configuration
MODEL_CACHE_DIR=./data/model_cache
GPU_DEVICE_ID=0
STABLE_DIFFUSION_MODEL=stabilityai/stable-diffusion-xl-base-1.0
USE_GPU=false

# Media Storage
TEMP_MEDIA_PATH=/tmp/ai-film-studio/media
UPLOAD_MAX_SIZE=100MB

# Logging
LOG_LEVEL=DEBUG
LOG_FORMAT=pretty

# Monitoring (Optional for Dev)
SENTRY_DSN=
CLOUDWATCH_LOG_GROUP=/ai-film-studio/dev

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Rate Limiting
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX_REQUESTS=100
