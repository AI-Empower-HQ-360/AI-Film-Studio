# AI Film Studio - Development Environment Configuration
# Copy this file to .env.dev and update with your local settings

#############################################
# Application Settings
#############################################
NODE_ENV=development
API_URL=http://localhost:5000
NEXT_PUBLIC_API_URL=http://localhost:5000

#############################################
# Database Configuration
#############################################
# Option 1: Local PostgreSQL (Docker)
DATABASE_URL=postgresql://aifilm:dev_password@localhost:5432/aifilm_dev
DB_HOST=localhost
DB_PORT=5432
DB_NAME=aifilm_dev
DB_USER=aifilm
DB_PASSWORD=dev_password

# Option 2: AWS RDS (uncomment if using cloud dev DB)
# DATABASE_URL=postgresql://aifilm:your_password@dev-db.xxx.rds.amazonaws.com:5432/aifilm_dev
# DB_HOST=dev-db.xxx.rds.amazonaws.com

#############################################
# Redis Cache Configuration
#############################################
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

#############################################
# AWS Configuration (Optional for local dev)
#############################################
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_dev_access_key
AWS_SECRET_ACCESS_KEY=your_dev_secret_key

# S3 Storage (use local storage or dev bucket)
USE_LOCAL_STORAGE=true
LOCAL_STORAGE_PATH=./data/uploads
S3_BUCKET=ai-film-studio-dev
S3_REGION=us-east-1

# SQS Queue (use LocalStack or AWS)
USE_LOCAL_QUEUE=true
SQS_QUEUE_URL=http://localhost:4566/000000000000/aifilm-dev-jobs

#############################################
# AI Models Configuration
#############################################
# Use mock AI for fast development
USE_MOCK_AI=true

# Model cache directory
MODEL_CACHE_DIR=./models

# AI API Keys (use test keys)
OPENAI_API_KEY=sk-test-xxx
ANTHROPIC_API_KEY=sk-ant-test-xxx

# Model settings
AI_TIMEOUT_SECONDS=60
MAX_CONCURRENT_JOBS=2

#############################################
# Authentication & Security
#############################################
JWT_SECRET=dev_jwt_secret_change_in_production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=1440
REFRESH_TOKEN_EXPIRATION_DAYS=7

# Password hashing
BCRYPT_ROUNDS=10

#############################################
# Email Configuration (Optional)
#############################################
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=dev@ai-filmstudio.com

#############################################
# Logging & Debugging
#############################################
LOG_LEVEL=DEBUG
LOG_FORMAT=pretty
ENABLE_SQL_LOGGING=true
ENABLE_DEBUG_TOOLBAR=true

#############################################
# Frontend Configuration
#############################################
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_ENV=development

#############################################
# Feature Flags
#############################################
ENABLE_SIGNUP=true
ENABLE_PAYMENT=false
ENABLE_YOUTUBE_UPLOAD=false
ENABLE_ANALYTICS=false

#############################################
# Rate Limiting (Relaxed for dev)
#############################################
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW_SECONDS=60

#############################################
# File Upload Limits
#############################################
MAX_UPLOAD_SIZE_MB=100
ALLOWED_FILE_TYPES=jpg,jpeg,png,mp4,mov,avi

#############################################
# Development Tools
#############################################
ENABLE_HOT_RELOAD=true
ENABLE_CORS=true
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
