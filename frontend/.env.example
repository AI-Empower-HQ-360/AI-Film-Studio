# AI Film Studio Frontend Environment Variables
# Copy this file to .env.local for local development

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000
NEXT_PUBLIC_API_VERSION=v1
NEXT_PUBLIC_ENV=development

# Application Settings
NEXT_PUBLIC_APP_NAME=AI Film Studio
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_MAX_UPLOAD_SIZE=104857600
NEXT_PUBLIC_SUPPORTED_VIDEO_FORMATS=mp4,mov,avi
NEXT_PUBLIC_SUPPORTED_IMAGE_FORMATS=jpg,jpeg,png,webp

# Feature Flags - AI Services
NEXT_PUBLIC_ENABLE_VIDEO_GENERATION=true
NEXT_PUBLIC_ENABLE_VOICE_SYNTHESIS=true
NEXT_PUBLIC_ENABLE_LIPSYNC=true
NEXT_PUBLIC_ENABLE_MUSIC_GENERATION=true
NEXT_PUBLIC_ENABLE_PODCAST_VIDEO=true
NEXT_PUBLIC_ENABLE_SUBTITLE_GENERATION=true

# Analytics & Monitoring (Optional)
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=
NEXT_PUBLIC_MIXPANEL_TOKEN=

# Error Tracking (Optional)
NEXT_PUBLIC_ENABLE_SENTRY=false
NEXT_PUBLIC_SENTRY_DSN=

# Experimental Features
NEXT_PUBLIC_ENABLE_BETA_FEATURES=false
NEXT_PUBLIC_ENABLE_VOICE_CLONING=false

# Google OAuth (Optional)
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your_google_client_id_here
NEXT_PUBLIC_REDIRECT_URI=http://localhost:3000/auth/callback

# Subscription Limits
NEXT_PUBLIC_FREE_CREDITS=10
NEXT_PUBLIC_PRO_CREDITS=100
NEXT_PUBLIC_ENTERPRISE_CREDITS=1000