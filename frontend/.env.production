# Production Environment Variables for Next.js Frontend
# These are injected at build time by Amplify

# API Configuration
NEXT_PUBLIC_API_URL=https://api-prod.aifilmstudio.com
NEXT_PUBLIC_WS_URL=wss://api-prod.aifilmstudio.com
NEXT_PUBLIC_API_VERSION=v1

# Environment
NEXT_PUBLIC_ENV=production

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_SENTRY=true

# Application Settings
NEXT_PUBLIC_APP_NAME=AI Film Studio
NEXT_PUBLIC_APP_URL=https://www.aifilmstudio.com
NEXT_PUBLIC_MAX_UPLOAD_SIZE=104857600
NEXT_PUBLIC_SUPPORTED_VIDEO_FORMATS=mp4,mov,avi
NEXT_PUBLIC_SUPPORTED_IMAGE_FORMATS=jpg,jpeg,png,webp

# Subscription Limits
NEXT_PUBLIC_FREE_CREDITS=10
NEXT_PUBLIC_PRO_CREDITS=100
NEXT_PUBLIC_ENTERPRISE_CREDITS=1000
