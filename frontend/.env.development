# Development Environment Variables for Next.js Frontend

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000
NEXT_PUBLIC_API_VERSION=v1

# Environment
NEXT_PUBLIC_ENV=development

# Feature Flags - AI Services
NEXT_PUBLIC_ENABLE_VIDEO_GENERATION=true
NEXT_PUBLIC_ENABLE_VOICE_SYNTHESIS=true
NEXT_PUBLIC_ENABLE_LIPSYNC=true
NEXT_PUBLIC_ENABLE_MUSIC_GENERATION=true
NEXT_PUBLIC_ENABLE_PODCAST_VIDEO=true
NEXT_PUBLIC_ENABLE_SUBTITLE_GENERATION=true

# Analytics & Monitoring
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_SENTRY=false

# Experimental Features
NEXT_PUBLIC_ENABLE_BETA_FEATURES=true
NEXT_PUBLIC_ENABLE_VOICE_CLONING=false

# Application Settings
NEXT_PUBLIC_APP_NAME=AI Film Studio (Dev)
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_MAX_UPLOAD_SIZE=104857600
NEXT_PUBLIC_SUPPORTED_VIDEO_FORMATS=mp4,mov,avi
NEXT_PUBLIC_SUPPORTED_IMAGE_FORMATS=jpg,jpeg,png,webp

# Subscription Limits
NEXT_PUBLIC_FREE_CREDITS=10
NEXT_PUBLIC_PRO_CREDITS=100
NEXT_PUBLIC_ENTERPRISE_CREDITS=1000
