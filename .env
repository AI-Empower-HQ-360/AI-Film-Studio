# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Logging
LOG_LEVEL=INFO

# AI Model Settings
MODEL_CACHE_DIR=./data/model_cache

# AWS Configuration
AWS_REGION=us-east-1
AWS_S3_BUCKET=ai-film-studio-assets
AWS_SQS_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/YOUR_ACCOUNT/ai-film-studio-queue

# Video Generation Models
STABILITY_AI_API_KEY=your_stability_ai_key_here
RUNWAYML_API_KEY=your_runwayml_key_here
HUGGINGFACE_TOKEN=your_huggingface_token_here

# Voice Synthesis APIs
ELEVENLABS_API_KEY=your_elevenlabs_key_here
OPENAI_API_KEY=your_openai_key_here
AZURE_SPEECH_KEY=your_azure_speech_key_here
AZURE_SPEECH_REGION=eastus
COQUI_TTS_MODEL_PATH=./models/coqui

# Translation Services
GOOGLE_TRANSLATE_API_KEY=your_google_translate_key_here
DEEPL_API_KEY=your_deepl_key_here

# Subtitle Generation
WHISPER_MODEL_SIZE=large-v3
WHISPER_DEVICE=cuda
GOOGLE_CLOUD_SPEECH_CREDENTIALS=./credentials/google-cloud-speech.json
AZURE_SPEECH_SUBSCRIPTION_KEY=your_azure_subscription_key_here

# Music Generation
MUSICGEN_MODEL_SIZE=small
AUDIOCRAFT_MODEL_PATH=./models/audiocraft

# Lip-sync and Animation Models
WAV2LIP_MODEL_PATH=./models/wav2lip/wav2lip_gan.pth
FOMM_MODEL_PATH=./models/fomm/vox-cpk.pth.tar
SADTALKER_MODEL_PATH=./models/sadtalker

# GPU Configuration
GPU_MEMORY_THRESHOLD=0.9
GPU_DEVICE_ID=0
ENABLE_MIXED_PRECISION=true

# Job Queue Configuration
QUEUE_SERVICE=aws_sqs  # Options: aws_sqs, bullmq, rabbitmq, celery
REDIS_URL=redis://localhost:6379/0
RABBITMQ_URL=amqp://guest:guest@localhost:5672/
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Worker Configuration
ENABLE_AUTO_SCALING=true
MIN_WORKERS=1
MAX_WORKERS=10
WORKER_TIMEOUT=3600
GPU_INSTANCE_TYPE=g4dn.xlarge

# Job Priority Settings
ENTERPRISE_PRIORITY=critical
PRO_PRIORITY=high
FREE_PRIORITY=medium

# Rate Limiting
MAX_JOBS_PER_USER_HOUR=10
MAX_CONCURRENT_JOBS_PER_USER=3

# Monitoring
ENABLE_METRICS=true
PROMETHEUS_PORT=9090
GRAFANA_URL=http://localhost:3000

# Feature Flags
ENABLE_VIDEO_GENERATION=true
ENABLE_VOICE_SYNTHESIS=true
ENABLE_LIPSYNC=true
ENABLE_MUSIC_GENERATION=true
ENABLE_PODCAST_VIDEO=true
ENABLE_SUBTITLE_GENERATION=true
ENABLE_VOICE_CLONING=false
