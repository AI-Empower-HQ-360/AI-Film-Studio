# ==============================================
# AI FILM STUDIO - SANDBOX ENVIRONMENT
# ==============================================
# DO NOT COMMIT THIS FILE WITH REAL CREDENTIALS
# Store secrets in AWS Secrets Manager
# ==============================================

# Environment
NODE_ENV=sandbox
APP_ENV=sandbox

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_BASE_URL=https://api-sandbox.aifilmstudio.com

# Database (RDS)
DATABASE_URL=postgresql://user:password@sandbox-rds.xxx.us-east-1.rds.amazonaws.com:5432/ai_film_studio_sandbox
DATABASE_HOST=sandbox-rds.xxx.us-east-1.rds.amazonaws.com
DATABASE_PORT=5432
DATABASE_NAME=ai_film_studio_sandbox
DATABASE_USER=admin
DATABASE_PASSWORD=STORE_IN_SECRETS_MANAGER

# Redis (ElastiCache)
REDIS_URL=redis://sandbox-redis.xxx.cache.amazonaws.com:6379
REDIS_HOST=sandbox-redis.xxx.cache.amazonaws.com
REDIS_PORT=6379
REDIS_PASSWORD=STORE_IN_SECRETS_MANAGER

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=USE_IAM_ROLE
AWS_SECRET_ACCESS_KEY=USE_IAM_ROLE
S3_BUCKET_NAME=ai-film-studio-sandbox-media
SQS_QUEUE_URL=https://sqs.us-east-1.amazonaws.com/ACCOUNT_ID/ai-film-studio-sandbox-jobs

# Salesforce (Dev/Sandbox Org)
SALESFORCE_CLIENT_ID=STORE_IN_SECRETS_MANAGER
SALESFORCE_CLIENT_SECRET=STORE_IN_SECRETS_MANAGER
SALESFORCE_USERNAME=sandbox.user@example.com
SALESFORCE_PASSWORD=STORE_IN_SECRETS_MANAGER
SALESFORCE_SECURITY_TOKEN=STORE_IN_SECRETS_MANAGER
SALESFORCE_INSTANCE_URL=https://test.salesforce.com

# YouTube Data API v3
YOUTUBE_API_KEY=STORE_IN_SECRETS_MANAGER
YOUTUBE_CLIENT_ID=xxx.apps.googleusercontent.com
YOUTUBE_CLIENT_SECRET=STORE_IN_SECRETS_MANAGER
YOUTUBE_REDIRECT_URI=https://sandbox.aifilmstudio.com/api/auth/youtube/callback

# JWT Authentication
JWT_SECRET=STORE_IN_SECRETS_MANAGER
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=STORE_IN_SECRETS_MANAGER
JWT_REFRESH_EXPIRES_IN=30d

# AI Services
ELEVENLABS_API_KEY=STORE_IN_SECRETS_MANAGER
RUNWAY_API_KEY=STORE_IN_SECRETS_MANAGER
DREAM_MACHINE_API_KEY=STORE_IN_SECRETS_MANAGER

# Feature Flags
ENABLE_PODCAST_MODE=true
ENABLE_SLOKAS_MODE=true
ENABLE_MULTI_LANGUAGE=true
ENABLE_INDIAN_MUSIC=true
ENABLE_WESTERN_MUSIC=true

# AI Model Configuration
MODEL_CACHE_DIR=/app/models
GPU_DEVICE_ID=0
STABLE_DIFFUSION_MODEL=stabilityai/stable-diffusion-xl-base-1.0
USE_GPU=true

# Media Storage
TEMP_MEDIA_PATH=/tmp/media
UPLOAD_MAX_SIZE=100MB

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Monitoring
SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx
CLOUDWATCH_LOG_GROUP=/ai-film-studio/sandbox

# CORS
CORS_ORIGINS=https://sandbox.aifilmstudio.com

# Rate Limiting
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX_REQUESTS=100
